<beast version='2.0'
       namespace='beast.densities:beast.core:beast.evolution.operators:beast.core.parameter'>

  <parameter spec='RealParameter' name='x' id='x' dimension="1" value="1" lower="1" upper="100"/>

  <run spec="MCMC" id="mcmc" chainLength="1000">
    <state>
      <input name='stateNode' idref='x'/>
    </state>
    
    <distribution spec="Prior" id="posterior">
      <input name="x" idref="x"/>
      <input name="density" spec="OneOnX"/>
    </distribution>
    
    <operator id="scale" spec="ScaleOperator" scaleFactor="0.5" weight="1">
      <input name="parameter" idref="x"/>
    </operator>

    <logger logEvery="100">
      <log idref="x"/>
      <log idref="posterior"/>
    </logger>

    <logger logEvery="10" fileName="oneonx.log">
      <log idref="x"/>
      <log idref="posterior"/>
    </logger>
  </run>

</beast>

